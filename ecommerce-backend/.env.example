JWT_SECRET=your_jwt_secret_here
PORT=5000

# Database
DB_URI=your_mongodb_connection_string_here

# SMTP / Email (example for Gmail/SendGrid)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM="no-reply@yourdomain.com"

# SendGrid (optional - used for template emails)
SENDGRID_API_KEY=your_sendgrid_api_key_optional
SENDGRID_TEMPLATE_ORDER=d-your_sendgrid_order_template_id
SENDGRID_TEMPLATE_ADMIN=d-your_sendgrid_admin_template_id

# Admin contacts
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PHONE=+911234567890

# Frontend origin (CORS)
FRONTEND_URL=http://localhost:3000

# Cloudinary (optional - used for uploads)
CLOUDINARY_URL=your_cloudinary_url_optional
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Maps Geocoding


