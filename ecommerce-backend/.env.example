NOMINATIM_EMAIL=ops@yourdomain.com

# Twilio (optional - used for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1XXXXXXXXXX